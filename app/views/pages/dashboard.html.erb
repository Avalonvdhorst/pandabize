<div class="container">
  <h1 class="text-center my-3">My uploaded bikes</h1>
  <div class="row">
    <% @bicycles.each do |bike| %>
      <div class="col-4">
        <div class="card" style="width: 20rem;">
          <img src="<%= bike.url_photo %>" class="card-img-top" alt="...">
          <div class="card-body" style="height: 60px;">
            <div class="d-flex justify-content-between">
              <p><strong><%= bike.name.upcase %></strong></p>
                <p><%= link_to "Edit", edit_bicycle_model_path(bike) %>
                <%= link_to "Delete",
                    bicycle_model_path(bike),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this bike?" } %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

