<%= simple_form_for(@bm, html: { novalidate: true }) do |f| %>
  <div class="form-card">
    <%= f.input :name, pattern: false,  wrapper_html: { class: "bold-text" } %>
    <%= f.input :description, input_html: { class: "high-input" }, wrapper_html: { class: "bold-text" } %>
  </div>
  <p class="pl-4"><strong>Select the custom options for this bike:</strong></p>
  <div id="option_types">
    <%= f.simple_fields_for :option_types do |ot| %>
    <div class="form-card">
      <%= render 'option_type_fields', f: ot %>
    </div>
    <% end %>
    <div class="form-card">
      <div class="links my-4">
        <%= link_to_add_association 'add more', f, :option_types, class: "btn btn-outline-primary" %>
      </div>
    </div>

  </div>
  <div class="my-5">
    <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
    <%= f.submit "submit", class: "btn btn-primary" %>
  </div>
<% end %>


