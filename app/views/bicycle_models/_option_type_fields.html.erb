<div class="nested-fields form-card">
  <div class="row">
    <div class="col-11">
      <%= f.input :name, label: false, class: "mt-3" %>
    </div>
    <div class="col-1 pt-1">
      <%= link_to_remove_association '<i class="fas fa-minus"></i>'.html_safe, f  %>
    </div>
  </div>
  <p class="smaller-para bold-text">Options:</p>
  <div id="options" class="pt-0">
    <div class="row mt-0">
      <%= f.simple_fields_for :options do |op| %>
        <div class="col-3">
          <%= render 'option_fields', f: op %>
        </div>
      <% end %>
    </div>
    <div class="links">
    <%= link_to_add_association 'add option', f, :options, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
